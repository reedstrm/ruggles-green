<project name="commons-codec" default="default">
    <description>
        Copies commons-codec jar to ${target_dir}.
    </description>

    <fileset id="commons-codec-1.4" dir="commons-codec/commons-codec-1.4" includes="*.jar" />

    <target name="default">
        <fail message="Target path for jars is not set.">
            <condition>
                <not>
                    <and>
                        <isset property="target_dir" />
                    </and>
                </not>
            </condition>
        </fail>

        <copy todir="${target_dir}">
            <fileset refid="commons-codec-1.4" />
        </copy>
    </target>
</project>
